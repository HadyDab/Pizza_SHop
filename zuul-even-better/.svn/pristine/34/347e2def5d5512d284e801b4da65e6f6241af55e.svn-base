public class HelpControler {

	private Stage HelpStage;

	public HelpControler() {

	}

	/**
	 * Initiate this Controller, this method will be called in the main class
	 */
	public void initControler() {

	}

	/**
	 * Quit the Help view and go back to the game view
	 */
	@FXML
	public void handleClose() {
		HelpStage.close();
	}

	/**
	 * Sets the stage of this dialog.
	 * 
	 * @param HelpStage the stage to be set 
	 */
	public void setDialogStage(Stage HelpStage) {
		this.HelpStage = HelpStage;
	}

}
